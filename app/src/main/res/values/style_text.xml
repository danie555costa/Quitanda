<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="textGeral">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="textLine" parent="textGeral">
        <item name="android:background">@drawable/border_text_line_blue</item>
    </style>
    
    <style
        name="textSolid" parent="textLine" 
        >
        <item name="android:paddingLeft">@dimen/lib_padding_text_left</item>
        <item name="android:paddingRight">@dimen/lib_padding_text_right</item>
        <item name="android:paddingTop">@dimen/lip_padding_text_top</item>
        <item name="android:paddingBottom">@dimen/lib_padding_text_button</item>
        <item name="android:background">@drawable/background_button_blue</item>
        <item name="android:textColor">@color/branca</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="textLineLong" parent="textLine">
        <item name="android:textSize">@dimen/textSizeLong</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margemTiny</item>
        <item name="android:layout_marginLeft">@dimen/margemTiny</item>
    </style>
    
    <style name="textLineBig" parent="textLine">
        <item name="android:textSize">@dimen/textSizeBig</item>
    </style>
    
    <style name="textLineBigWrap" parent="textLine">
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:layout_width">wrap_content</item>
    </style> 
    
    <style name="textLineNormal" parent="textLine">
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/margemTiny</item>
        <item name="android:layout_marginLeft">@dimen/margemTiny</item>
    </style>
</resources>
