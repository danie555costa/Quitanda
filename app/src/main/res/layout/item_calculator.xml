<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize"
    >
    <RelativeLayout
        android:id="@+id/calc_are_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/tv_calc_visor"
            android:text="@string/_0_0"
            android:gravity="end"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/textPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:lines="1"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/tv_preview_value"
            android:layout_below="@+id/tv_calc_visor"
            android:layout_toLeftOf="@+id/bt_close_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="100 000 000,90"
            android:padding="16dp"
            android:lines="1"
            android:textColor="@color/textPrimary"/>

        <ImageButton
            android:id="@+id/bt_close_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calculator_black"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_below="@+id/tv_calc_visor"
            android:background="@drawable/background_button_clear"
            android:layout_toLeftOf="@+id/bt_keyboard_backspace"
            />
        <ImageButton
            android:id="@+id/bt_keyboard_backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backspace_black_24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_calc_visor"
            android:background="@drawable/background_button_clear"
            />
        <!--<View-->
            <!--android:id="@+id/separator"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@+id/bt_keyboard_backspace"-->
            <!--android:background="@android:color/darker_gray"-->
            <!--/>-->
    </RelativeLayout>

    <include layout="@layout/includ_keyboards"/>

</LinearLayout>
